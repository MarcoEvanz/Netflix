<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/MainCSS/Main.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:lightgray">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header" style="margin-top:10px">
                <a class="logo" href="#">
                    <img src="~/Content/LogoIMG/NetflixLogo.png" alt="Netflix">
                </a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Trang Chủ", "TrangChu", "Home")</li>
                <li><a href="#">Phim mới</a></li>
                <li><a href="#">Phim lẻ</a></li>
                <li><a href="#">Phim bộ</a></li>
            </ul>
            <form class="navbar-form navbar-left" action="/action_page.php">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm kiếm phim">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </div>
                </div>
            </form>
            @if (@Session["TaiKhoan"] == null)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Đăng Nhập", "DangNhap", "NguoiDung")</li>
                    <li>@Html.ActionLink("Đăng Ký", "DangKy", "NguoiDung")</li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("ChiTietUser", "NguoiDung", new { tkkh = Session["TaiKhoan"] })"><span class="glyphicon glyphicon-user"></span>@Session["TaiKhoan"]</a></li>
                </ul>
            }
        </div>
    </div>
    @RenderBody()
    <footer>
        <div class="footer-container">
            <div class="footer-links">
                <ul>
                    <li><a href="#">Về Netflix</a></li>
                    <li><a href="#">Việc làm</a></li>
                    <li><a href="#">Thông tin liên hệ</a></li>
                    <li><a href="#">Quản lý tài khoản</a></li>
                    <li><a href="#">Chế độ sử dụng</a></li>
                    <li><a href="#">Bảo mật</a></li>
                    <li><a href="#">Trung tâm trợ giúp</a></li>
                </ul>
            </div>
            <div class="social-links">
                <ul>
                    <li><a href="#"><i class="fab fa-facebook-f">Facebook</i></a></li>
                    <li><a href="#"><i class="fab fa-instagram">Instagram</i></a></li>
                    <li><a href="#"><i class="fab fa-twitter">Twitter</i></a></li>
                </ul>
            </div>
        </div> <br />
        <p style="text-align:center">&copy; 2020 Netflix. Bản quyền thuộc về <span lang="en">Netflix Inc.</span></p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
