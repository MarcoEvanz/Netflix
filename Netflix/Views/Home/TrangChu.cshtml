@{
    ViewBag.Title = "Home Page";
}
@model List<Netflix.Models.Phim>
<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">
            <h4>Thể loại</h4>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="#">Hành động</a></li>
                <li><a href="#">Tình cảm</a></li>
                <li><a href="#">Kinh dị</a></li>
                <li><a href="#">Hài hước</a></li>
                <li><a href="#">Viễn tưởng</a></li>
            </ul>
        </div>
        <div class="col-sm-8 text-left">
            <h2>Hành Động, Hài Hước</h2>
            <hr />
            @foreach (var phim in Model)
            {
                if (phim.TheLoai == "Hành Động" || phim.TheLoai == "Hài Hước")
                {
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/PhimIMG/@phim.HinhMinhHoa" alt="Video Image">
                        </div>
                        <div class="card-content">
                            <h2 class="card-title">@phim.TenPhim</h2>
                            <p class="card-category">@phim.TheLoai</p>
                        </div>
                        <button class="card-button">
                            <a href="@Url.Action("ChiTietPhim", "Home", new { id =  phim.IdPhim})">Xem Ngay</a>
                        </button>
                    </div>
                }
            }
            <h2>Anime, Hoạt Hình</h2>
            <hr />
            @foreach (var phim in Model)
            {
                if (phim.TheLoai == "Anime" || phim.TheLoai == "Hoạt Hình")
                {
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/PhimIMG/@phim.HinhMinhHoa" alt="Video Image">
                        </div>
                        <div class="card-content">
                            <h2 class="card-title">@phim.TenPhim</h2>
                            <p class="card-category">@phim.TheLoai</p>
                        </div>
                        <button class="card-button">
                            <a href="@Url.Action("ChiTietPhim", "Home", new { id =  phim.IdPhim})">Xem Ngay</a>
                        </button>
                    </div>
                }
            }
            <h2>Kinh Dị</h2>
            <hr />
            @foreach (var phim in Model)
            {
                if (phim.TheLoai == "Kinh Dị")
                {
                    <div class="card">
                        <div class="card-image">
                            <img src="~/Content/PhimIMG/@phim.HinhMinhHoa" alt="Video Image">
                        </div>
                        <div class="card-content">
                            <h2 class="card-title">@phim.TenPhim</h2>
                            <p class="card-category">@phim.TheLoai</p>
                        </div>
                        <button class="card-button">
                            <a href="@Url.Action("ChiTietPhim", "Home", new { id =  phim.IdPhim})">Xem Ngay</a>
                        </button>
                    </div>
                }
            }
        </div>

    </div>
</div>